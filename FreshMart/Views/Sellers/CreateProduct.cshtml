@model FreshMart.ViewModels.SellerViewModel
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/Sellers/_SellerLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="text-center">
                            <h2>Create Product</h2>
                            <small class="text-green">@Model.Error</small>

                            @if (TempData["uploaderr"] != null)
                            {
                                <small class="text-danger">@TempData["uploaderr"] </small>
                            }

                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" method="post" enctype="multipart/form-data" asp-controller="Sellers" asp-action="CreateProduct" role="form">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="CreateProductViewModel.Title" class="control-label"></label>
                                    <input asp-for="CreateProductViewModel.Title" class="form-control" />
                                    <span asp-validation-for="CreateProductViewModel.Title" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label asp-for="CreateProductViewModel.Price" class="control-label"></label>
                                    <input asp-for="CreateProductViewModel.Price" class="form-control" />
                                    <span asp-validation-for="CreateProductViewModel.Price" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label asp-for="CreateProductViewModel.Description" class="control-label"></label>
                                    <input asp-for="CreateProductViewModel.Description" class="form-control" />
                                    <span asp-validation-for="CreateProductViewModel.Description" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label asp-for="CreateProductViewModel.Unit" class="control-label"></label>
                                    <input asp-for="CreateProductViewModel.Unit" class="form-control" />
                                    <span asp-validation-for="CreateProductViewModel.Unit" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label asp-for="CreateProductViewModel.ItemInStock" class="control-label"></label>
                                    <input asp-for="CreateProductViewModel.ItemInStock" class="form-control" />
                                    <span asp-validation-for="CreateProductViewModel.ItemInStock" class="text-danger"></span>
                                </div>



                                <div class="form-group">
                                    <label asp-for="CreateProductViewModel.OfferPrice" class="control-label"></label>
                                    <input asp-for="CreateProductViewModel.OfferPrice" class="form-control" />
                                    <span asp-validation-for="CreateProductViewModel.OfferPrice" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    @Html.LabelFor(model => model.CreateProductViewModel.CategoryId, htmlAttributes: new { @class = "control-label " })
                                    @Html.DropDownListFor(model => model.CreateProductViewModel.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select Category from list", new { @class = "form-control" })
                                    <span asp-validation-for="CreateProductViewModel.CategoryId" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label asp-for="CreateProductViewModel.ImagePath" class="control-label"></label>
                                    <input asp-for="CreateProductViewModel.ImagePath" type="file" Class="form-control" name="file" />
                                    <span asp-validation-for="CreateProductViewModel.ImagePath" class="text-danger"></span>
                                </div>



                                <div class="form-group">
                                    <button type="submit" name="login-submit" id="login-submit" tabindex="4" class="btn btn-login" value="Publish Product">Create</button>
                                </div>


                                <div>
                                    <a asp-action="Index">Back to Product Home</a>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>