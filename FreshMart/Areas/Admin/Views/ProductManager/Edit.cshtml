@model FreshMart.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit Product
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Update Product</h3>
                    </div>
                    <!-- /.box-header -->
                    @using (Html.BeginForm("Edit", "ProductManager", new { id = Model.Id }, FormMethod.Post))
                    {
                        <div class="box-body">
                            @Html.HiddenFor(c => c.Id)
                            <div class="form-group">
                                @Html.LabelFor(c => c.Title, new { @class = "control-label" })
                                @Html.TextBoxFor(c => c.Title, new { @class = "form-control" })
                            </div>

                            @Html.HiddenFor(c => c.Id)
                            @Html.HiddenFor(c => c.SellerId)
                            @Html.HiddenFor(c => c.Unit)
                            @Html.HiddenFor(c => c.IsPublished)
                            @Html.HiddenFor(c => c.ImagePath)
                            @Html.HiddenFor(c => c.DistrictId)
                            @Html.HiddenFor(c => c.CategoryId)
                            @Html.HiddenFor(c => c.CreatedAt)


                            <div class="form-group">
                                @Html.LabelFor(c => c.Price, new { @class = "control-label" })
                                @Html.TextBoxFor(c => c.Price, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(c => c.Description, new { @class = "control-label" })
                                @Html.TextBoxFor(c => c.Description, new { @class = "form-control" })
                            </div>



                            <div class="form-group">
                                @Html.LabelFor(c => c.ItemInStock, new { @class = "control-label" })
                                @Html.TextBoxFor(c => c.ItemInStock, new { @class = "form-control" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.OfferPrice, new { @class = "control-label" })
                                @Html.TextBoxFor(c => c.OfferPrice, new { @class = "form-control" })
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(c => c.OfferExpireDate, new { @class = "control-label" })
                                @Html.TextBoxFor(c => c.OfferExpireDate, new { @class = "form-control" })
                            </div>

                        </div>

                        <div class="box-footer">
                            <input type="submit" value="Save" class="btn btn-default" />

                        </div>
                    }

                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

</div>

