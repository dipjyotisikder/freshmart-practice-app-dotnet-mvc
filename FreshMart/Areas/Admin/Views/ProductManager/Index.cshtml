@model IEnumerable<FreshMart.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            All Products
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Product Table</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>District</th>
                                    <th>Seller Name</th>
                                    <th>Category</th>
                                    <th>Take Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Price</td>
                                        <td>@item.District.Name</td>
                                        <td>@item.Seller.Name</td>
                                        <td>@item.Category.Name</td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", "ProductManager", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", "ProductManager", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "DeleteConfirmed", "ProductManager", new { id = item.Id })
                                        </td>

                                    </tr>
                                }

                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

</div>