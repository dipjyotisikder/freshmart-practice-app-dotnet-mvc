@using FreshMart.Models
@model FreshMart.Models.Agent

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Create Agent
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Add New Category</h3>
                    </div>
                    <!-- /.box-header -->
                    @using (Html.BeginForm("Create", "Agents", FormMethod.Post))
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="box-body">
                            <div class="form-group">
                                @*<label asp-for="Name" class="control-label"></label>*@
                                @Html.LabelFor(c => c.Name, new { @class = "control-label" })
                                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                @{
                                    List<District> districts = (List<District>)ViewBag.districts;
                                }
                                @Html.LabelFor(c => c.DistrictId, new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.DistrictId, new SelectList(districts, "Id", "Name"), "Select District", new { @class = "form-control" })

                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    }
                    <!-- /.box-body -->
                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

</div>



